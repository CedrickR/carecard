# Nom de domaine ou hôte utilisé pour l'accès au site
SITE_HOST=carecard.local

# Ports exposés côté hôte
HTTP_PORT=8003
HTTPS_PORT=8443

# Ports pour le serveur mail de développement (Mailpit)
MAIL_SMTP_PORT=1025
MAIL_WEB_PORT=8025
# Adresse e-mail utilisée par le bouton « Envoyer par e-mail »
MAIL_RECIPIENT=contact@example.com

# Relais SMTP (optionnel)
# Active la redirection automatique de tous les messages Mailpit vers un relais externe
SMTP_RELAY_ENABLE=false
SMTP_RELAY_HOST=smtp-relay.example.com
SMTP_RELAY_PORT=587
SMTP_RELAY_USERNAME=
SMTP_RELAY_PASSWORD=
# Valeurs possibles : never, auto, always
SMTP_RELAY_STARTTLS=auto
# Adresse d'expéditeur utilisée pour le relais (facultatif)
SMTP_RELAY_FROM=carecard@example.com
